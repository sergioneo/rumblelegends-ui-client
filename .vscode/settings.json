  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "sublimeTextKeymap.promptV3Features": true,
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  "javascript.suggestionActions.enabled": false,
  "scss.validate": false
}
